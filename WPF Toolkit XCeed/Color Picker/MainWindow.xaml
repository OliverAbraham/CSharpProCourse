<Window x:Class="Color_Picker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Color_Picker"
        mc:Ignorable="d"
        Title="Color Picker" Height="288.202" Width="426.854" Background="FloralWhite">
    <Grid>
        <xctk:ColorPicker Margin="54,67,0,0" SelectedColor="{Binding MeineFarbe}" 
                          SelectedColorChanged="ColorPicker_SelectedColorChanged" HorizontalAlignment="Left" Width="315" Height="44" VerticalAlignment="Top"/>

        <Label Content="Ausgewählte Farbe:" FontSize="16" HorizontalAlignment="Left" Margin="54,174,0,0" VerticalAlignment="Top" Width="165"/>
        <Label Content="{Binding MeineFarbe}" FontSize="16" HorizontalAlignment="Left" Margin="224,174,0,0" VerticalAlignment="Top" Width="145" Height="31"/>
    </Grid>
</Window>
