<Window x:Class="RichTextBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:RichTextBox"
        mc:Ignorable="d"
        Title="Rich textbox" Height="454.045" Width="396.517" Background="FloralWhite">
    <Grid>
        
        <xctk:RichTextBox Name="myTextbox1" Text="{Binding MyText1}" Margin="31,28,33,69"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"/>
        
        <Button Content="RTF-Datei laden" FontSize="14" 
                Margin="74,0,81,19" Height="31" VerticalAlignment="Bottom" 
                Click="DateiLaden_Click" />
        
    </Grid>
</Window>
